<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_5dp">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/v25sp"
                android:text="Monday"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textColor="@color/flatBlack"/>


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/v20sp"
                android:layout_below="@id/day"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="27th March 2017"/>
            
            <ImageView
                android:id="@+id/attendance_image"
                android:layout_width="@dimen/v50dp"
                android:layout_height="@dimen/v50dp"
                android:src="@drawable/present"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>