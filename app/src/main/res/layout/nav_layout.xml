<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v120dp"
        android:background="@color/themeGreen"
        android:paddingLeft="@dimen/margin_20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/v80dp"
            android:layout_height="@dimen/v80dp"
            android:src="@drawable/student"
            android:layout_marginTop="@dimen/margin_30dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/appWhite"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/profile_image">

            <TextView
                android:id="@+id/nameMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/titleTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/v20sp" />

            <TextView
                android:id="@+id/roleMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="@color/titleTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/v20sp" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/log_out">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="My Profile"
                    android:textSize="@dimen/v15sp" />

            </LinearLayout>

            <View
                android:id="@+id/profile_sep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/v2dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/select_institute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/nav_school" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="Select Institution"
                    android:textSize="@dimen/v15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v2dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/lecture_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/work_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="Today's Lecture Agenda"
                    android:textSize="@dimen/v15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v2dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/newspaper_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="News"
                    android:textSize="@dimen/v15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v2dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/qr_code_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="QR Code"
                    android:textSize="@dimen/v15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scan_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:layout_width="@dimen/v30dp"
                    android:layout_height="@dimen/v30dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/qr_code_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:text="Scan QR"
                    android:textSize="@dimen/v15sp" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
    
    <LinearLayout
        android:id="@+id/log_out"
        android:layout_width="@dimen/v150dp"
        android:layout_height="@dimen/v50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:background="@drawable/roundcorner_rectangle2"
        android:backgroundTint="@color/themeGreen"
        android:gravity="center"
        android:elevation="@dimen/margin_5dp">
        
        <ImageView
            android:layout_width="@dimen/v50dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/v40dp"
            android:src="@drawable/exit" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"
            android:textSize="@dimen/v20sp"
            android:textColor="@color/appWhite"
            android:layout_marginLeft="@dimen/v2dp"/>
        
        
        
    </LinearLayout>

    
</RelativeLayout>