<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/v200dp"
        android:layout_margin="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/logout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you really want to logout?"
                android:textSize="@dimen/v25sp"
                android:layout_weight="2"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v3dp"
                android:background="@color/themeGreen"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.2"
                android:gravity="center">

                <TextView
                    android:id="@+id/no_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    android:textSize="@dimen/v25sp"
                    android:layout_weight="1"
                    android:gravity="center"/>


                <View
                    android:layout_width="@dimen/v3dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeGreen" />


                <TextView
                    android:id="@+id/yes_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    android:textSize="@dimen/v25sp"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>