<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/school_fees1_standard_label_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center|left"
        android:paddingBottom="10dp"
        android:text="@string/standard_hint_text"
        android:textSize="@dimen/school_edit_activity_text_size"/>
    <TextView
        android:id="@+id/school_fees_value_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/school_edit_activity_text_size"
        android:visibility="visible"
        android:layout_weight="3"
        android:textColor="@android:color/black"
        android:text="@string/school_name_text_view"/>


</LinearLayout>