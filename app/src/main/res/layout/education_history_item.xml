<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/v200dp"
        android:layout_margin="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/themeGreen">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                app:cardCornerRadius="@dimen/margin_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/appWhite"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/className"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hindi Class"
                        android:textColor="@color/flatBlack"
                        android:textSize="@dimen/v25sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From: "
                            android:textColor="@color/flatBlack"
                            android:textSize="@dimen/v20sp" />

                        <TextView
                            android:id="@+id/institute_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gyan Ganga "
                            android:textColor="@color/flatBlack"
                            android:textSize="@dimen/v22sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/standard_View"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="1st Standard"
                        android:textColor="@color/flatBlack"
                        android:textSize="@dimen/v22sp" />


                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Start Date : 24/06/2018"
                        android:textColor="@color/flatBlack"
                        android:textSize="@dimen/v22sp" />

                    <TextView
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="Start Date : 24/06/2018"
                        android:textColor="@color/flatBlack"
                        android:textSize="@dimen/v22sp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>