<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentStory.QR_Code"
    android:id="@+id/main_view">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/themeGreen">

            <android.support.v7.widget.CardView
                android:id="@+id/qrParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_10dp"
                app:cardCornerRadius="@dimen/margin_5dp">


            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/v400dp" />


            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your unique QR Code"
                android:textStyle="bold"
                android:textSize="@dimen/v30sp"
                android:textColor="@color/appWhite"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_below="@id/qrParent"/>

            <TextView
                android:layout_below="@id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell your parents, so that they can connect with you!"
                android:textSize="@dimen/v25sp"
                android:textStyle="bold"
                android:textColor="@color/appWhite"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>