<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/class_card"
        android:layout_width="@dimen/v180dp"
        android:layout_height="@dimen/v180dp"
        android:layout_margin="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/v5dp">

        <LinearLayout
            android:id="@+id/item_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/class_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard : 12th"
                android:textSize="@dimen/v25sp"
                android:textColor="@color/flatBlack"/>


            <TextView
                android:id="@+id/class_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/v25sp"
                android:text="Maths"
                android:textColor="@color/flatBlack"/>



        </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>